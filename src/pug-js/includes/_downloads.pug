include _mixins
.downloads
    .container
        .data
            h2 Download the extension
            p We've got more browsers in the pipline.
                | Please do let us know if you've got a favourite you'd like us to prioritize.
        .browsers   
            +browser("./dist/images/logo-chrome.svg",
            "Add to Chrome",
            "Minimum version 62",
            "./src/assets/images/bg-dots.svg")
            +browser("./dist/images/logo-firefox.svg",
            "Add to Chrome",
            "Minimum version 55",
            "./src/assets/images/bg-dots.svg")
            +browser("./dist/images/logo-opera.svg",
            "Add to Chrome",
            "Minimum version 46",
            "./src/assets/images/bg-dots.svg")
